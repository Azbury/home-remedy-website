<h2><%= @remedy.title %></h2>
<p>Description: <%= @remedy.description%><p>
<%= link_to "New Comment", new_remedy_comment_path(@remedy) %><br>
<h3>Comments</h3>
<% @remedy.comments.each do |comment| %>
    <h4><%= link_to "#{comment.user.username}", user_path(comment.user) %> said <%= comment.content %></h4>
<% end %>