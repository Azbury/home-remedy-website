<h1>Sign up for an account on The Home Remedy Website!</h1>

<%= form_for @user  do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br/>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br/>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br/>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br/>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br/>
  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit %>
<% end %>

<h3>Already have an account? Sign in <%= link_to "here", '/signin' %></h3> 